<script>
    
    readAppointmentsById()
    
    var inst = mobiscroll.eventcalendar('#demo-events-labels', {
        theme: 'ios',                           // Specify theme like: theme: 'ios' or omit setting to use default
        themeVariant: 'light',                  // More info about themeVariant: https://docs.mobiscroll.com/5-23-0/javascript/eventcalendar#opt-themeVariant
