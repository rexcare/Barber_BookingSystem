            }
        },
        onEventClick: function (event, inst) {  // More info about onEventClick: https://docs.mobiscroll.com/5-23-0/javascript/eventcalendar#event-onEventClick
            mobiscroll.toast({ 
                
                message: event.event.title
            });
            toggleModal(event.event.id)
        }
    });

    function readAppointmentsById() {
        let data = {
            Id: '@User.GetUserId()',
        }
        // get working times
        $.ajax({
            type: 'POST',
            url: '/Appointment/readAppointmentsById',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: data,
            success: function (result) {
                if (result == "error") {
                    alert('Failed to receive the Data');
                    console.log('Failed ');
                }
                else {
                    var mainData = JSON.parse(result);
                    var events = [];
                    var colors = [
                        "#198754",
                        "#0D6EFD",
                        "#FFC107",
                        "#8540F5",
                        "#4DD4AC"
                    ];
                    for(i=0;i<mainData.length;i++)
                    {
                        let item = {
                            start: moment(mainData[i].StartTime).add(4, "hours"),
                            end: moment(mainData[i].StartTime).add(4.75, "hours"),
                            title: mainData[i].Customer.FirstLastName,
                            color: colors[Math.floor(Math.random() * colors.length)],
                            id: mainData[i].Id,
                        }
                        events.push(item)
                    }
                    inst.setEvents(events);
                }
            },
            error: function () {
                alert('Error occures to receive the Data');
                console.log('Error occures ');
            }
        })
    }
    
    function toggleModal(id) {
        var myModal = new bootstrap.Modal(document.getElementById('a-'+id), {
            keyboard: false
        });

        myModal.toggle();
    }

</script>
