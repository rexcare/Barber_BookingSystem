        {
            <span>
                <a class="btn btn-primary" style="float: right; text-decoration: none black" asp-action="GenerateWTT">Generate Workplan for next @wtt.WorkTimeTemplateInfo days starts with @wtt.GenerationDate.Date.ToShortDateString()</a>
            </span>
        }
