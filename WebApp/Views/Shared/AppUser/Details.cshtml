        console.log('asdfasdfasdf',moment(mindate).format("MM/DD/YYYY"));
        showEvents(moment(mindate).format("MM/DD/YYYY"))

        // Add events
        calendar.onDateClick(function (event, date) {
            // Update calendar date
            if (isContainDate(workTimes, date)) {
                calendar.set(date);
                // Show events
                showEvents(date);
            }
        });

    }

</script>
