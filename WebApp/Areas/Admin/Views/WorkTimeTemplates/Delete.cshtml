                        </tr>
                        <tr>
                            <td class="w-50">@Html.DisplayNameFor(model => model.StartTime2)</td>
                            <td>@Html.DisplayFor(model => model.StartTime2)</td>
                        </tr>
                        <tr>
                            <td class="w-50">@Html.DisplayNameFor(model => model.StopTime2)</td>
                            <td>@Html.DisplayFor(model => model.StopTime2)</td>
                        </tr>
                    </tbody>
                </table>
