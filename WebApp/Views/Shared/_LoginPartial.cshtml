@using Microsoft.AspNetCore.Identity
@using App.Domain.Identity
@using Base.Extensions
@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager


<ul class="navbar-nav">
    @{
        if (!User.IsInRole("admin") && !User.IsInRole("user"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" title="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" title="Register">Register</a>
            </li>
        }
        
        
        if (User.IsInRole("admin"))
        {
            if (User.GetUserEmail() == "admin@itcollege.ee")
            {
                <li class="nav-item">
                    <a class="nav-link text-dark">@(User.GetUserName())</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@(User.GetUserName())</a>
                </li> 
            }
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        if (User.IsInRole("user") && !User.IsInRole("admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@(User.GetUserName())</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            <li class="nav-item dropdown">
                <a 
                    class="nav-link dropdown-toggle text-dark" 
                    href="javascript:{}" 
                    id="navbarLangDropdown" 
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-haspopup="true" 
                    aria-expanded="false"
                >
                    @App.Resources.WebApp.Views.Shared._Layout.Language
                 </a>
                <div class="dropdown-menu" aria-labelledby="navbarLangDropdown">
                    <a class="dropdown-item"
                        asp-area="" asp-controller="Home" asp-action="SetLanguage"
                        asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                        hello
                    </a>
                    <a class="dropdown-item"
                       asp-area="" asp-controller="Home" asp-action="SetLanguage"
                       asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                        hello
                    </a>
                </div>
            </li>
        }
    }
</ul>