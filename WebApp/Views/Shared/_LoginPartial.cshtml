@using Microsoft.AspNetCore.Identity
@using App.Domain.Identity
@using Base.Extensions
@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager


<ul class="navbar-nav">
    @{
        if (!User.IsInRole("admin") && !User.IsInRole("user"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" title="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" title="Register">Register</a>
            </li>
        }
        
        
        if (User.IsInRole("admin"))
        {
            <li class="nav-item dropdown">
                <a title="Manage"
               class="nav-link dropdown-toggle text-dark"
               href="javascript:{}"
               id="navbarLangDropdown"
               role="button"
               data-bs-toggle="dropdown"
               aria-haspopup="true"
               aria-expanded="false">
                    @(User.GetUserName())
                </a>

                <div class="dropdown-menu" aria-labelledby="navbarLangDropdown" style="right: 0; left: auto; min-width: 6rem">
                    if (User.GetUserEmail() == "admin@itcollege.ee")
                    {
                        <a class="nav-link text-dark">@(User.GetUserName())</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@(User.GetUserName())</a>
                    }
                     
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
                </div>
            </li>
        }
        if (User.IsInRole("user") && !User.IsInRole("admin"))
        {
            <li class="nav-item dropdown">
                <a 
                   title="Manage"
                   class="nav-link dropdown-toggle text-dark"
                   href="javascript:{}"
                   id="navbarLangDropdown"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-haspopup="true"
                   aria-expanded="false"
                >
                @(User.GetUserName())
               </a>

                <div class="dropdown-menu" aria-labelledby="navbarLangDropdown" style="right: 0; left: auto; min-width: 6rem">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user-circle-o mx-1"></i>Profile</a>
                        
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                        <button type="submit" class="nav-link btn btn-link text-dark">
                            <i class="fa fa-sign-out mx-1"></i>Logout
                        </button>
                    </form>
                </div>
            </li>
        }
    }
</ul>