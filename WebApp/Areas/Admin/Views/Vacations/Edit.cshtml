@model App.Domain.Vacation

@{
    ViewData["Title"] = "Edit";
    var appUser = ViewBag.AppUser;
}

<h1>Vacation days for @appUser.FirstLastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label text-white"></label>
                <input type="Date" asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStop" class="control-label text-white"></label>
                <input type="date" asp-for="DateStop" class="form-control" />
                <span asp-validation-for="DateStop" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="AppUserId" value="@appUser.Id" />
            
            <input asp-route-id="@appUser.Id" type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="text-decoration: none black" asp-action="Create" asp-route-id="@appUser.Id">Back to List</a>
</div>

                    
<td>
    <a  style="text-decoration: none" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</td>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
